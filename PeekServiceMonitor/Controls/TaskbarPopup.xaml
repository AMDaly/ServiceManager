<UserControl x:Class="PeekServiceMonitor.Controls.TaskbarPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeekServiceMonitor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Border
        Background="White"
        BorderBrush="Crimson"
        BorderThickness="3"
        CornerRadius="8"
        Opacity="0.9" 
        Height="300"
        Width="300">

        <StackPanel>
            <StackPanel Orientation="Horizontal" Height="60">
                <Image Source="pack://application:,,,/Resources/service_popup_icon.png" Height="55" Width="58"/>
                <TextBlock 
                    Text="Peek Service Status" 
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Padding="20"/>
            </StackPanel>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <ListView Height="228"></ListView>
        </StackPanel>
    </Border>
</UserControl>
